                    HorizontalContentAlignment="Right"
                    Grid.Row="1"
                    Width="95" 
                    Height="28" 
                    Canvas.Top="30">Current weight:</Label>
                <Label 
                    x:Name="AltCurrentWeightLabel"
                    FontSize="20"  
                    Grid.Row="1" 
                    VerticalContentAlignment="Bottom"
                    Height="32" 
                    Width="80" 
                    Canvas.Left="87" 
                    Canvas.Top="22">9999.99</Label>

                <Path Stretch="Fill" Grid.Row="1" Fill="Black" 
                      Data="M
                      0,115   95,115   
                      65,90   85,90    
                      120,120          
                              85,150  65,150  
                              95,125  0,125   
                      Z"  
                      Width="32" 
                      Canvas.Left="92" 
                      Canvas.Top="32.667" Height="19"
        >
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform Angle="270"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Canvas>
            <Label 
                Content="Target weight: " 
                HorizontalContentAlignment="Right"
                Width="94" Canvas.Left="244" Canvas.Top="43"/>
            <Label 
                x:Name="AltTargetWeightLabel"
                Content="9999.99" 
                FontSize="20" 
                VerticalContentAlignment="Bottom"
                Height="34" 
                Width="80" Canvas.Left="330" Canvas.Top="35"/>

