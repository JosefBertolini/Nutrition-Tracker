                HorizontalAlignment="Left" 
                Height="20" 
                Margin="80,74,0,0"
                Grid.Row="1" 
                Stroke="Black" 
                VerticalAlignment="Top"
                Width="500" 
                Panel.ZIndex="1"/>
            <Rectangle 
                x:Name="AltWeightRectFill"
                HorizontalAlignment="Left" 
                Height="20" 
                Margin="330,74,0,0"
                Grid.Row="1" 
                VerticalAlignment="Top"
                Width="10" 
                Panel.ZIndex="0" />
