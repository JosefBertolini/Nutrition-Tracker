<Page x:Class="Nutrition_Tracker.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nutrition_Tracker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="656"
      Title="EditUserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4.5*" />
            <RowDefinition Height=".1*" />
        </Grid.RowDefinitions>

        <Label 
            Content="Edit Your Profile"
            FontSize="35"
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="10"
            Height="60" 
            Width="636" />


        <Button 
            Content="Cancel" 
            x:Name="CancelButton"
            HorizontalAlignment="Left"
            Margin="123,290,0,0" 
            VerticalAlignment="Top" 
            Height="44" 
            Width="107"
            Grid.Row="1"
            FontSize="20" 
            Click="CancelButton_Click"
            />
        <Button 
            Content="Update" 
            x:Name="UpdateButton"
            HorizontalAlignment="Left" 
            Margin="426,290,0,0" 
            VerticalAlignment="Top" 
            Height="44" 
            Width="107"
            FontSize="20" 
            Grid.Row="1"
            Click="UpdateButton_Click"
            />
        <Label 
            Content="Daily Macro Nutrients"
            FontSize="23"
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Center"
            Margin="50,29,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Width="255" 
            Height="42"/>
        <Label 
            Content="KCals" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Right" 
            Margin="78,86,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Top"
            Padding="0"
            Height="30" 
            Width="58"/>
        <TextBox 
            x:Name="KCalInput"
            PreviewTextInput="NumericOnly"
            TextChanged="UpdateStates"
            MaxLength="4"
            MaxLines="1"
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Center"
            FontSize="23" 
            Margin="155,86,0,0" 
            Padding="0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="82" 
            Height="30"/>
        <Label 
            Content="Protein" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Right" 
            Margin="69,129,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Top"
            Padding="0"
            Height="30" 
            Width="67"/>
        <TextBox 
            x:Name="ProteinInput"
            PreviewTextInput="NumericOnly"
            TextChanged="UpdateStates"
            MaxLength="4"
            MaxLines="1"
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Center"
            FontSize="23" 
            Margin="155,129,0,0"  
            Padding="0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="82" 
            Height="30"/>
