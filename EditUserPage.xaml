            HorizontalContentAlignment="Center"
            FontSize="23" 
            Margin="539,201,0,0"  
            Padding="0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="36" 
            Height="30"
            IsReadOnly="False" />
        <Label 
            Content="." 
            FontSize="20"
