            HorizontalContentAlignment="Center"
            FontSize="23" 
            Margin="467,201,0,0"  
            Padding="0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="60" 
            Height="30"
            IsReadOnly="False" />
        <TextBox 
            x:Name="CurrentWeightDecimal"
            PreviewTextInput="NumericOnly"
            TextChanged="UpdateStates"
            MaxLength="2"
            MaxLines="1"
