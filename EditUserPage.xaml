            x:Name="CarbsInput"
            PreviewTextInput="NumericOnly"
            TextChanged="UpdateStates"
            MaxLength="4"
            MaxLines="1"
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Center"
            FontSize="23" 
            Margin="155,172,0,0"  
            Padding="0"
            Grid.Row="1" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="82" 
            Height="30"/>
        <Label 
            Content="Fats" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Right" 
            Margin="78,214,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Top"
            Padding="0"
            Height="30" 
            Width="58"/>
        <TextBox 
            x:Name="FatsInput"
            PreviewTextInput="NumericOnly"
            TextChanged="UpdateStates"
            MaxLength="4"
            MaxLines="1"
