            Content="Carbs" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            HorizontalContentAlignment="Right" 
            Margin="78,172,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Top"
            Padding="0"
            Height="30" 
            Width="58"/>
